{{#> "systems/animabf/templates/common/ui/group.hbs"
  class="common-resources"
}}
  {{#> "systems/animabf/templates/common/ui/group-body.hbs"
    class="common-resources"
  }}
    <div class='first-row'>
      {{>
      "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
        class="current-life"
        title=(localize 'anima.ui.general.life.current.title')
        inputName="data.characteristics.secondaries.lifePoints.value"
        inputValue=data.data.characteristics.secondaries.lifePoints.value
        hasSecondaryInput=true
        addTooltips=true
        addTooltips=true
        secondaryInputName="data.characteristics.secondaries.lifePoints.max"
        secondaryInputValue=data.data.characteristics.secondaries.lifePoints.max
      }}
      {{>
      "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
        class="fatigue"
        title=(localize 'anima.ui.general.fatigue.title')
        inputName="data.characteristics.secondaries.fatigue.value"
        inputValue=data.data.characteristics.secondaries.fatigue.value
        hasSecondaryInput=true
        secondaryInputName="data.characteristics.secondaries.fatigue.max"
        secondaryInputValue=data.data.characteristics.secondaries.fatigue.max
      }}
      {{>
      "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
        class="initiative-base"
        rollable=true
        title=(localize 'anima.ui.general.initiative.base.title')
        inputName="data.characteristics.secondaries.initiative.base.value"
        inputValue=data.data.characteristics.secondaries.initiative.base.value
        hasSecondaryInput=true
        disableSecondaryInput=true
        rollSecondaryInput=true
        addTooltips=true
        secondaryInputName="data.characteristics.secondaries.initiative.final.value"
        secondaryInputValue=data.data.characteristics.secondaries.initiative.final.value
      }}
    </div>
    <div class='movements'>
      {{>
      "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
        class="movement"
        title=(localize 'anima.ui.general.movementType.title')
        inputName="data.characteristics.secondaries.movementType.mod.value"
        inputValue=data.data.characteristics.secondaries.movementType.mod.value
        hasSecondaryInput=true
        disableSecondaryInput=true
        secondaryInputName="data.characteristics.secondaries.movementType.final.value"
        secondaryInputValue=data.data.characteristics.secondaries.movementType.final.value
      }}
      {{>
      "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
        class="movement"
        title=(localize 'anima.ui.general.movement.maximum.title')
        disabled=true
        inputName="data.characteristics.secondaries.movement.maximum.value"
        inputValue=data.data.characteristics.secondaries.movement.maximum.value
      }}
      {{>
      "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
        class="running"
        title=(localize 'anima.ui.general.movement.running.title')
        disabled=true
        inputName="data.characteristics.secondaries.movement.running.value"
        inputValue=data.data.characteristics.secondaries.movement.running.value
      }}
      {{>
      "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
        class="movement"
        title=(localize 'anima.ui.general.movement.quarter.title')
        disabled=true
        inputValue=(math data.data.characteristics.secondaries.movement.maximum.value "/" 4)
      }}
    </div>
