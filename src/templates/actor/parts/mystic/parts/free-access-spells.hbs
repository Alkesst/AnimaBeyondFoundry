{{#> "systems/animabf/templates/common/ui/group.hbs"
  class="free-access-spells"
}}
  {{>
  "systems/animabf/templates/common/ui/group-header.hbs"
    title=(localize "anima.ui.mystic.freeAccessSpell.title")
    addRowButtonData="add-free-access-spell"
  }}
  {{#> "systems/animabf/templates/common/ui/group-body.hbs"
    class="free-access-spells"
  }}
    {{#each data.data.mystic.freeAccessSpells}}
      <div data-item-id='{{this._id}}' class='free-access-spell-row'>
        {{>
        "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
          class="level"
          title=(localize "anima.ui.mystic.freeAccessSpell.level.title")
          hideTitle=(is "gt" @index 0)
          inputName=(concat "data.dynamic.freeAccessSpells." this._id ".data.level.value")
          inputValue=this.data.level.value
        }}
        {{>
        "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
          class="spell"
          title=(localize "anima.ui.mystic.freeAccessSpell.spell.title")
          hideTitle=(is "gt" @index 0)
          inputType="text"
          inputName=(concat "data.dynamic.freeAccessSpells." this._id ".name")
          inputValue=this.name
        }}
        {{>
        "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
          class="cost"
          title=(localize "anima.ui.mystic.freeAccessSpell.cost.title")
          hideTitle=(is "gt" @index 0)
          inputName=(concat "data.dynamic.freeAccessSpells." this._id ".data.cost.value")
          inputValue=this.data.cost.value
        }}
      </div>
    {{/each}}
  {{/"systems/animabf/templates/common/ui/group-body.hbs"}}
{{/"systems/animabf/templates/common/ui/group.hbs"}}