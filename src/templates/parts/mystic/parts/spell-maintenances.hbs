{{#> "systems/animabf/templates/parts/common/group.hbs"
  class="spell-maintenances"
  title="Mantenimientos diarios"
  addRowButtonData="add-spell-maintenance"
}}
  {{#each data.mystic.spellMaintenances}}
    <div data-spell-maintenance-id='{{this._id}}' class='spell-maintenance-row'>
      {{>
      "systems/animabf/templates/parts/common/vertical-titled-input.hbs"
        class="name"
        title="Conjuro / Criatura"
        hideTitle=(is "gt" @index 0)
        inputType="text"
        inputName=(concat "data.dynamic.spellMaintenances." this._id ".name")
        inputValue=this.name
      }}
      {{>
      "systems/animabf/templates/parts/common/vertical-titled-input.hbs"
        class="cost"
        title="Coste"
        hideTitle=(is "gt" @index 0)
        inputName=(concat "data.dynamic.spellMaintenances." this._id ".data.cost.value")
        inputValue=this.data.cost.value
      }}
    </div>
  {{/each}}
{{/"systems/animabf/templates/parts/common/group.hbs"}}