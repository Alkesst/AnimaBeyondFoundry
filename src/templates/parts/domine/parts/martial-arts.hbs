{{#> "systems/animabf/templates/parts/common/ui/group.hbs"
  class="martial-arts"
}}
  {{>
  "systems/animabf/templates/parts/common/ui/group-header.hbs"
    title=(localize "anima.ui.domine.martialArts.title")
    addRowButtonData="add-martial-art"
  }}
  {{#> "systems/animabf/templates/parts/common/ui/group-body.hbs"
    class="martial-arts"
  }}
    {{#each data.data.domine.martialArts}}
      <div data-martial-art-id='{{this._id}}' class='martial-art-row'>
        {{>
        "systems/animabf/templates/parts/common/ui/vertical-titled-input.hbs"
          class="name"
          title=(localize "anima.ui.domine.martialArts.name.title")
          hideTitle=(is "gt" @index 0)
          inputType="text"
          inputName=(concat "data.dynamic.martialArts." this._id ".name")
          inputValue=this.name
        }}
        {{>
        "systems/animabf/templates/parts/common/ui/vertical-titled-input.hbs"
          class="grade"
          title=(localize "anima.ui.domine.martialArts.grade.title")
          hideTitle=(is "gt" @index 0)
          inputType="text"
          inputName=(concat "data.dynamic.martialArts." this._id ".grade")
          inputValue=this.data.grade.value
        }}
      </div>
    {{/each}}
  {{/"systems/animabf/templates/parts/common/ui/group-body.hbs"}}
{{/"systems/animabf/templates/parts/common/ui/group.hbs"}}