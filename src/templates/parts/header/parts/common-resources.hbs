{{#> "systems/animabf/templates/parts/common/group.hbs"
  class="common-resources"
}}
  {{#> "systems/animabf/templates/parts/common/group-body.hbs"
    class="common-resources"
  }}
    <div class='life'>
      {{>
      "systems/animabf/templates/parts/common/vertical-titled-input.hbs"
        class="max-life"
        title=(localize 'anima.ui.general.life.max.title')
        inputName="data.general.lifePoints.max.value"
        inputValue=data.general.lifePoints.max.value
      }}
      {{>
      "systems/animabf/templates/parts/common/vertical-titled-input.hbs"
        class="current-life"
        title=(localize 'anima.ui.general.life.current.title')
        inputName="data.general.lifePoints.current.value"
        inputValue=data.general.lifePoints.current.value
      }}
    </div>
    <div class='initiative'>
      <h4 class='initiative-title'>{{localize 'anima.ui.general.initiative.title'}}</h4>
      <div class='initiative-values'>
        {{>
        "systems/animabf/templates/parts/common/vertical-titled-input.hbs"
          class="initiative-base"
          rollable=true
          title=(localize 'anima.ui.general.initiative.base.title')
          inputName="data.general.initiative.base.value"
          inputValue=data.general.initiative.base.value
        }}
        {{>
        "systems/animabf/templates/parts/common/vertical-titled-input.hbs"
          class="primary-initiative"
          rollable=true
          title=(localize 'anima.ui.general.initiative.primary.title')
          inputName="data.general.initiative.primary.value"
          inputValue=data.general.initiative.primary.value
        }}
        {{>
        "systems/animabf/templates/parts/common/vertical-titled-input.hbs"
          class="secondary-initiative"
          rollable=true
          title=(localize 'anima.ui.general.initiative.secondary.title')
          inputName="data.general.initiative.secondary.value"
          inputValue=data.general.initiative.secondary.value
        }}
      </div>
    </div>
    <div class='fatigue-movement'>
      {{>
      "systems/animabf/templates/parts/common/vertical-titled-input.hbs"
        class="fatigue"
        title=(localize 'anima.ui.general.fatigue.title')
        inputName="data.general.fatigue.current.value"
        inputValue=data.general.fatigue.current.value
        hasSecondaryInput=true
        secondaryInputName="data.general.fatigue.max.value"
        secondaryInputValue=data.general.fatigue.max.value
      }}
      {{>
      "systems/animabf/templates/parts/common/vertical-titled-input.hbs"
        class="movement"
        title=(localize 'anima.ui.general.movement.title')
        inputName="data.general.movement.value"
        inputValue=data.general.movement.value
      }}
    </div>
  {{/"systems/animabf/templates/parts/common/group-body.hbs"}}
{{/"systems/animabf/templates/parts/common/group.hbs"}}