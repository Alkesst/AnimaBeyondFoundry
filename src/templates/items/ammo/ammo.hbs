{{#> "systems/animabf/templates/items/base/base-sheet.hbs"}}
  {{#> "systems/animabf/templates/common/ui/group.hbs"
    class="ammo-item-dialog"
  }}
    {{#> "systems/animabf/templates/common/ui/group-header.hbs"}}
      <div class='ammo-header'>
        {{>
        "systems/animabf/templates/common/ui/horizontal-titled-input.hbs"
          class="name"
          hideTitle=true
          inputType="text"
          inputName=(concat "name")
          inputValue=data.name
        }}
      </div>
    {{/"systems/animabf/templates/common/ui/group-header.hbs"}}
    {{#> "systems/animabf/templates/common/ui/group-body.hbs"
      class="ammo-item-dialog"
    }}
      {{> 'systems/animabf/templates/common/ui/custom-select-choices.hbs'
        class="critic"
        isVertical=true
        choices=config.iterables.combat.weapon.criticTypes
        title=(localize "anima.ui.combat.ammo.critic.title")
        inputName=(concat "data.critic.value")
        inputValue=data.data.critic.value
      }}
      {{>
      "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
        class="presence"
        title=(localize "anima.ui.combat.ammo.presence.title")
        inputName=(concat "data.presence.value")
        inputValue=data.data.presence.value
      }}
      {{>
      "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
        class="integrity"
        title=(localize "anima.ui.combat.ammo.integrity.title")
        inputName=(concat "data.integrity.value")
        inputValue=data.data.integrity.value
      }}
      {{>
      "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
        class="breaking"
        title=(localize "anima.ui.combat.ammo.breaking.title")
        inputName=(concat "data.breaking.value")
        inputValue=data.data.breaking.value
      }}
      {{>
      "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
        class="damage"
        title=(localize "anima.ui.combat.ammo.damage.title")
        inputName=(concat "data.damage.value")
        inputValue=data.data.damage.value
      }}
      {{>
      "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
        class="special"
        title=(localize "anima.ui.combat.ammo.special.title")
        inputType="text"
        inputName=(concat "data.special.value")
        inputValue=data.data.special.value
      }}
    {{/"systems/animabf/templates/common/ui/group-body.hbs"}}
  {{/"systems/animabf/templates/common/ui/group.hbs"}}
{{/"systems/animabf/templates/items/base/base-sheet.hbs"}}